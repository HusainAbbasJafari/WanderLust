<% layout("layouts/boilerplate") %> 
  <body>
  
  <style>
  #filters{
      display:flex;
      flex-wrap: wrap;
      align-items: center;

    }
    .filter{
      margin-right: 2rem;
      margin-top: 2rem;
      text-align: center;
      opacity: 0.7;
    }
    .filter:hover{
     
      opacity: 1;
      cursor: pointer;
    }
    i{
      padding:0.2rem;
    }
    .filter p{
     
     font-size: 0.8rem;
   }
   .tax-info{
    display: none;
   }
   .tax-toggle{
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 1rem;
    border: 0.5px  solid rgba(37, 37, 37, 0.555);
    height: max-content;
    padding: 0.7rem;
 
    
   }
   .sort{
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
   }
   @media only screen and (max-width: 600px){
  .tax-toggle{
    display: none;
  }
}
   
  </style>
  <div class="sort">

  

    <div id="filters">
<!--All filters -->
      <div class="filter">
       <div> <i class="fa-solid fa-fire fa-xl"></i></div>
        <p>Trending</p>
      </div>

      <div class="filter">
        <div> <i class="fa-solid fa-bed fa-xl"></i></div>
         <p>Rooms</p>
       </div>

       <div class="filter">
        <div> <i class="fa-solid fa-mountain-city fa-xl"></i></div>
         <p>Iconic cities</p>
       </div>

       <div class="filter">
        <div><i class="fa-solid fa-mountain fa-xl"></i></div>
         <p>Mountains</p>
       </div>

       <div class="filter">
        <div><i class="fa-brands fa-fort-awesome fa-xl"></i></div>
         <p>Castles</p>
       </div>

       <div class="filter">
        <div><i class="fa-solid fa-person-swimming fa-xl"></i></div>
         <p>Amazing pools</p>
       </div>

       
       <div class="filter">
        <div><i class="fa-solid fa-tents fa-xl"></i></div>
         <p>Camping</p>
       </div>

       <div class="filter">
        <div><i class="fa-regular fa-snowflake fa-xl"></i></div>
         <p>Arctic</p>
       </div>

       <div class="filter">
        <div><i class="fa-solid fa-cow fa-xl"></i></div>
         <p>Farms</p>
       </div>

       <div class="filter">
        <div><i class="fa-solid fa-igloo fa-xl"></i></div>
         <p>Domes</p>
       </div>

       <div class="filter">
        <div><i class="fa-solid fa-tree fa-xl"></i></div>
         <p>Tropical</p>
       </div>

       <div class="filter">
        <div><i class="fa-solid fa-ship fa-xl"></i></div>
         <p>Boats</p>
       </div>

       </div>


       
<!-- tax switch -->
       <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display after total taxes</label>
        </div>
        </div>
       </div>
       
    

   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% alllistings.map((lis)=>{ %>
     <a href="/listing/<%=lis._id%>" class="listing-link">
        <div class="card card-listing col" >
          <img src=<%=lis.image.url%> class="card-img-top" alt="listing_image " style="height: 20rem">
          <div class="card-img-overlay">Jayf Programming</div>
          <div class="card-body">
            
            <p class="card-text"><b><%=lis.title%></b>
            <br/>&#8377;<%=lis.price.toLocaleString("en-IN")%> / Night
            <span class="tax-info"><i>&nbsp; &nbsp; +18% GST</i></span>
          </p>
  
          </div>
        
      </div>
    </a>
      <% }) %>
   </div>
  

   <script>
    let toggle = document.querySelector("#flexSwitchCheckDefault")
    
    toggle.addEventListener("click",()=>{
    let tax_info = document.querySelectorAll(".tax-info");
    for(info of tax_info){
      if(info.style.display != "inline"){
        info.style.display = "inline";
      }else{
        info.style.display = "none";
      }
      
    }
   
    })
   </script>
  </body>

